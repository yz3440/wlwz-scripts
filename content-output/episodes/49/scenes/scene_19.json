      ]
    },
    {
      "type": "action",
      "description": "佟湘玉转身上楼"
    },
    {
      "type": "dialog",
      "speaker": "郭芙蓉",
      "performances": [
        {
          "type": "speaker-action",
          "description": "忽然明白过来"
