  "performances": [
    {
      "type": "action",
      "description": "众人翘首期盼老白的归来"
    },
    {
      "type": "dialog",
      "speaker": "郭芙蓉",
      "performances": [
        {
          "type": "line",
          "line": "老白老白，怎么样，银子交过去了吗？小贝呢？小贝。"
        }
      ]
    },
    {
      "type": "action",
      "description": "老白坐，大嘴倒水，小郭还在看门外"
    },
    {
      "type": "dialog",
      "speaker": "白展堂",
      "performances": [
        {
          "type": "line",
          "line": "先不说这个，掌柜的怎么样了？"
        }
      ]
    },
    {
      "type": "dialog",
      "speaker": "李大嘴",
      "performances": [
        {
          "type": "line",
          "line": "他已经知道了，是小六说的。"
