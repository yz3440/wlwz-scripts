  "performances": [
    {
      "type": "action",
      "description": "小贝奔小道跑去，路过小米处"
    },
    {
      "type": "dialog",
      "speaker": "小米",
      "performances": [
        {
          "type": "line",
          "line": "佟掌柜早。"
