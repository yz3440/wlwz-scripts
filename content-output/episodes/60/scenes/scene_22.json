  "performances": [
    {
      "type": "action",
      "description": "老白被批斗，胸前挂个牌子，众人在旁边表情各异"
    },
    {
      "type": "dialog",
      "speaker": "李大嘴",
      "performances": [
        {
          "type": "line",
          "line": "这家伙，换个角度看这出，感觉就是不一样啊，看老白那怂样。"
        }
      ]
    },
    {
      "type": "dialog",
      "speaker": "郭芙蓉",
      "performances": [
        {
          "type": "line",
          "line": "去！"
        },
        {
          "type": "speaker-action",
          "description": "对秀才"
        },
        {
          "type": "line",
          "line": "我心里感觉毛毛的，像是要出事。"
