    },
    {
      "type": "dialog",
      "speaker": "李大嘴",
      "performances": [
        {
          "type": "line",
          "line": "哎？"
        }
      ]
    },
    {
      "type": "dialog",
      "speaker": "吕秀才",
      "performances": [
        {
          "type": "speaker-action",
          "description": "小声"
        },
        {
          "type": "line",
          "line": "算了算了，认个怂嘛。"
