  "performances": [
    {
      "type": "action",
      "description": "鸡叫，郭坐门口望，出神，佟湘玉下楼"
    },
    {
      "type": "dialog",
      "speaker": "佟湘玉",
      "performances": [
        {
          "type": "line",
          "line": "小郭看啥呢？呵呵……"
        }
      ]
    },
    {
      "type": "dialog",
      "speaker": "郭芙蓉",
      "performances": [
        {
          "type": "line",
          "line": "彩虹，你瞧那片云彩。"
