    },
    {
      "type": "dialog",
      "speaker": "白展堂",
      "performances": [
        {
          "type": "line",
          "line": "哼哼……"
        }
      ]
    },
    {
      "type": "dialog",
      "speaker": "郭蔷薇",
      "performances": [
        {
          "type": "line",
          "line": "对她，可能可以，对我……"
        },
        {
          "type": "speaker-action",
          "description": "摇头，出"
        }
      ]
    },
    {
      "type": "dialog",
      "speaker": "白展堂",
      "performances": [
        {
          "type": "line",
          "line": "难道我说得不好？这不挺有说服力的，这孩子……"
        }
      ]
    }
  ]
