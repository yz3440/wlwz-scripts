    {
      "type": "dialog",
      "speaker": "展堂",
      "performances": [
        {
          "type": "line",
          "line": "什么意思啊？"
        }
      ]
    },
    {
      "type": "action",
      "description": "燕小六一看不对，赶紧过来搅局"
