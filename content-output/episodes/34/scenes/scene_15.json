    {
      "type": "dialog",
      "speaker": "白展堂",
      "performances": [
        { "type": "speaker-action", "description": "再指女寝窗" },
        { "type": "line", "line": "那儿念去，那儿。" }
      ]
    },
    {
      "type": "dialog",
      "speaker": "吕秀才",
      "performances": [
        { "type": "line", "line": "\"……挥一挥衣袖……说声 Bye-bye\"" }
      ]
    },
    {
      "type": "dialog",
      "speaker": "李大嘴",
      "performances": [{ "type": "line", "line": "白白？" }]
